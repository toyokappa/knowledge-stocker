%h1=t "title.word_index"
%ul.word-index
  - @words.each do |word|
    %li
      %h2= link_to word.content, word
      %div
        - if word.knowledges.any?
          = link_to t("view.understood_site"), word.knowledges.first.url, target: "_blank"
          \|
        = link_to t("link.edit"), edit_word_path(word)
        \|
        = render "shared/delete_link", resources: word
  = paginate @words
