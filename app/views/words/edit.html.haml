%h1.center= t("title.word_edit")
.row
  .col-sm-6.col-sm-offset-3
    = form_with model: @word, local: true do |f|
      = render "shared/error_messages", resources: @word
      .form-group
        = f.label :content
        = f.text_field :content, class: "form-control"
      %ul.form-group
        = f.fields_for :knowledges do |knowledges_f|
          %li.form-inline.row
            .col-sm-9
              = knowledges_f.label :url
              = knowledges_f.url_field :url, class: "form-control input-sm"
            .col-sm-3
              = knowledges_f.label :understanding
              = knowledges_f.number_field :understanding, max: 5, min: 0, class: "form-control input-sm"
      = f.submit class: "btn btn-primary"
